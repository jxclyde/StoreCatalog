@model IEnumerable<Processor>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-secondary">In stock</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Processor" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new item
            </a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Manufacturer
            </th>
            <th>
                Model
            </th>
            <th>
                CoreCount
            </th>
            <th>
                ThreadCount
            </th>
            <th>
                Price
            </th>
            <th>
                Availability
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Manufacturer
                </td>
                <td width="20%">
                    @obj.Model
                </td>
                <td width="10%">
                    @obj.CoreCount
                </td>
                <td width="10%">
                    @obj.ThreadCount
                </td>
                <td width="10%">
                    @obj.Price
                </td>
                <td width="10%">
                    @obj.IsAvailable
                </td>
            </tr>
        }
    </tbody>
</table>

