@model StoreCatalog.Models.CatalogueItem
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-secondary">In stock:</h1>
            <h2 class="table-headers" style="color:#B46060; margin-bottom: 10px">Processors</h2>
            <a asp-controller="General" asp-action="CreateProcessor" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new item
            </a>
        </div>
    </div>
</div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th style="text-align: center; color:#6A5ACD">
                Manufacturer
            </th>
            <th style="text-align: center; color:#6A5ACD">
                Model
            </th>
            <th style="text-align: center; color:#6A5ACD">
                CoreCount
            </th>
            <th style="text-align: center; color:#6A5ACD">
                ThreadCount
            </th>
            <th style="text-align: center; color:#6A5ACD">
                Price
            </th>
            <th style="text-align: center; color:#6A5ACD">
                Availability
            </th>

        </tr>
    </thead>

    <tbody>
        @foreach (var cpus in Model.Processors)
        {
            <tr>
                <td width="20%" style="text-align: center">
                    @cpus.Manufacturer
                </td>
                <td width="20%" style="text-align: center">
                    @cpus.Model
                </td>
                <td width="10%" style="text-align: center">
                    @cpus.CoreCount
                </td>
                <td width="10%" style="text-align: center">
                    @cpus.ThreadCount
                </td>
                <td width="10%" style="text-align: center">
                    @cpus.Price
                </td>
                <td width="10%" style="text-align: center; color: @(cpus.IsAvailable ? "lime" : "red"); font-weight:bold">
                    @cpus.IsAvailable
                </td>
            </tr>
        }
    </tbody>

</table>

