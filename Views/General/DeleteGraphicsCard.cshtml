@model GraphicsCard

<form method="post" asp-controller="General" asp-action="DeleteGraphicsCardPOST" asp-route-id="@Model.GraphicsCardId">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Item</h2>
		</div>
		<div asp-validation-summary="All"></div>
		<input type="hidden" asp-for="GraphicsCardId" />
		<div class="mb-3">
			<label asp-for="Manufacturer"></label>
			<input asp-for="Manufacturer" disabled/>

		</div>
		<div class="mb-3">
			<label asp-for="Model"></label>
			<input asp-for="Model" disabled />

		</div>
		<div class="mb-3">
			<input asp-for="MemorySize" disabled />
			<label asp-for="MemorySize"></label>

		</div>
		<div class="mb-3">
			<label asp-for="MemoryType"></label>
			<input asp-for="MemoryType" disabled />

		</div>
		<div class="mb-3">
			<input asp-for="Price" disabled />
			<label asp-for="Price"></label>

		</div>
		<div class="mb-3">
			<label asp-for="IsAvailable"></label>
			<input asp-for="IsAvailable" disabled />

		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="General" asp-action="IndexGeneral" class="btn btn-secondary" style="width:150px">
			Back to Catalogue
		</a>
	</div>

</form>
